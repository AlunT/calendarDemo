<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/include_pickerview_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pickerview_topbar_height"/>

    <LinearLayout
        android:id="@+id/picker_ymd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pickervier_bottom_bg"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/picker_ymd_in_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <calendar.bigkoo.pickerview.lib.WheelView
                android:id="@+id/picker_ymd_year_wv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <calendar.bigkoo.pickerview.lib.WheelView
                android:id="@+id/picker_ymd_month_wv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <calendar.bigkoo.pickerview.lib.WheelView
                android:id="@+id/picker_ymd_day_wv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>